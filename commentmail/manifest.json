{
  "manifest_version": 3,
  "name": "CommentMail for LinkedIn",
  "version": "1.1.0",
  "description": "CommentMail: Extract emails from LinkedIn® comments—built for recruiters.",
  "permissions": ["sidePanel", "scripting", "activeTab", "downloads", "storage"],
  "host_permissions": ["*://*.linkedin.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": { "service_worker": "background.js" },
  "action": {
    "default_title": "CommentMail for LinkedIn",
    "default_icon": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
  },
  "content_scripts": [
    { "matches": ["*://*.linkedin.com/*"], "js": ["content.js"], "run_at": "document_idle" },
    { "matches": ["*://*.linkedin.com/*"], "js": ["injector.js"], "run_at": "document_start", "world": "MAIN" }
  ],
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" },
  "side_panel": { "default_path": "sidepanel.html" },
  "web_accessible_resources": [
    { "resources": ["sidepanel.html", "sidepanel.css", "sidepanel.js", "icons/*"], "matches": ["*://*.linkedin.com/*"] },
    { "resources": ["injector.js"], "matches": ["https://www.linkedin.com/*"] }
  ]
}
